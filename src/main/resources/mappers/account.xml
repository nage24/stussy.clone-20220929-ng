<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stussy.stussy.clone20220929ng.repository.AccountRepository">

    <!-- insert 두번 하려면 yml 설정 : url 뒤로 ?allowMultiQueries=true 를 준다 ... -->
    <insert id="save" parameterType="com.stussy.stussy.clone20220929ng.domain.User">
        insert into
        user_mst
        values(
        0,
        #{username},
        #{oauth_username},
        #{password},
        #{name},
        #{email},
        #{provider},
        #{role_id},
        now(),
        now()
        )
    </insert>


    <resultMap id="role" type="com.stussy.stussy.clone20220929ng.domain.Role">
        <result property="id" column="id"></result>
        <result property="role" column="role"></result>
        <result property="role_name" column="role_name"></result>


    </resultMap>
    <resultMap id="user" type="com.stussy.stussy.clone20220929ng.domain.User">
        <result property="id" column="id"></result>
        <result property="username" column="username"></result>
        <result property="oauth_username" column="oauth_username"></result>
        <result property="password" column="password"></result>
        <result property="name" column="name"></result>
        <result property="email" column="email"></result>
        <result property="provider" column="provider"></result>
        <result property="role_id" column="role_id"></result>
        <result property="create_date" column="create_date"></result>
        <result property="update_date" column="update_date"></result>

        <collection property="role" column="role"></collection>
    </resultMap>

    <select id="findUserByEmail" parameterType="String" resultMap="user">
        select
            um.id,
            um.username,
            um.oauth_username,
            um.password,
            um.name,
            um.email,
            um.provider,
            um.role_id,

            rm.role,
            rm.role_name,

            um.create_date,
            um.update_date

        from
            user_mst um
            left outer join role_mst rm on (rm.id = um.role_id)

        where
            email = #{email}
    </select>

</mapper>